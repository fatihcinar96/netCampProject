@model IEnumerable<Catalog.Business.ProductService.ProductListModel>
@{
    ViewData["Title"] = "List";
}

<h1>Product List</h1>


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Brand</th>
            <th scope="col">Category</th>
            <th scope="col">Description</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <th scope="row">@item.ID</th>
            <td>@item.Name</td>
            <td>@item.BrandName</td>
            <td>@item.CategoryName</td>
            <td>@item.Description</td>
        </tr>
        }

    </tbody>
    <input type="button" value="Create New" asp-controller="Brand" asp-action="Add" />
</table>

