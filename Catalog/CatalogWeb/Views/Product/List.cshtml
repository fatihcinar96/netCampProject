@model IEnumerable<Catalog.Business.ProductService.ProductListModel>
@{
    ViewData["Title"] = "List";
}

<h1>Product List</h1>


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Brand</th>
            <th scope="col">Category</th>
            <th scope="col">Description</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            int i = 0;
            i++;
            <tr>
                <th scope="row">@i</th>
                <td>@item.Name</td>
                <td>@item.BrandName</td>
                <td>@item.CategoryName</td>
                <td>@item.Description</td>
                <td><a>@Html.ActionLink("Update","Update","Product",new {id = item.ID })</a></td>
                <td><a>@Html.ActionLink("Delete","Delete","Product",new { id = item.ID})</a></td>
                
            </tr>
        }

    </tbody>
    @Html.ActionLink("Create New", "Add", "Product",new { @class = "form-control" })
</table>

